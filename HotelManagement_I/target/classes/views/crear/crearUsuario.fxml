<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.crear.CrearUsuarioController" spacing="10" prefHeight="400.0" prefWidth="600.0">
    <!-- Campos para ingresar los datos del usuario -->
    <TextField fx:id="nombreField" promptText="Nombre del Usuario" maxWidth="300.0"/>
    <TextField fx:id="apellidoField" promptText="Apellido del Usuario" maxWidth="300.0"/>
    <TextField fx:id="dniField" promptText="DNI" maxWidth="300.0"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300.0"/>

    <!-- ComboBox para seleccionar el tipo de usuario -->
    <ComboBox fx:id="rolChoiceBox" promptText="Selecciona Rol" maxWidth="300.0"/>

    <!-- Botones para guardar o cerrar -->
    <Button text="Crear Usuario" onAction="#crear"/>
    <Button text="Cerrar" onAction="#cerrarVentana"/>
</VBox>
