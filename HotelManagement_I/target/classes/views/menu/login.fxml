<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController">
    <Label text="Login" />
    <TextField fx:id="usernameField" promptText="Usuario" maxWidth="200.0" />
    <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="200.0" />

    <Button fx:id="iniciarSesionButton" text="Iniciar Sesión" onAction="#iniciarSesion"/>
    <Button text="Salir" onAction="#salir"/>

</VBox>
