<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdministradorController">
    <!-- VBox para los botones centrados -->
    <VBox alignment="CENTER" spacing="20.0">
        <Button text="Gestionar Usuarios" onAction="#gestionarUsuarios"/>
        <Button text="Gestionar Reservas" onAction="#gestionarReservas"/>
        <Button text="Gestionar Habitaciones" onAction="#gestionarHabitaciones"/>
        <Button text="Crear Backup" onAction="#crearBackup"/>
        <Button text="Modificar Mi Usuario" onAction="#modificarMiUsuario"/>
        <Button text="Cerrar Sesión" onAction="#cerrarSesion"/>
    </VBox>

    <!-- Botón para Modificar Mi Usuario, anclado a la esquina superior derecha -->
    <Button text="Salir" onAction="#salir"
            StackPane.alignment="TOP_RIGHT" />
</StackPane>