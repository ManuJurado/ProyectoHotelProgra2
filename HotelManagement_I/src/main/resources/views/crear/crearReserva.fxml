<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.crear.CrearReservaController">
    <children>
        <Label text="Crear Nueva Reserva" style="-fx-font-size: 20; -fx-font-weight: bold;" layoutX="10" layoutY="10"/>

        <Label text="Nombre del Cliente:" layoutX="10" layoutY="50"/>
        <TextField fx:id="txtCliente" layoutX="150" layoutY="50" prefWidth="200"/>

        <Label text="Número de Habitación:" layoutX="10" layoutY="90"/>
        <TextField fx:id="txtHabitacion" layoutX="150" layoutY="90" prefWidth="200"/>

        <Label text="Fecha de Inicio:" layoutX="10" layoutY="130"/>
        <DatePicker fx:id="dateFechaInicio" layoutX="150" layoutY="130"/>

        <Label text="Fecha de Fin:" layoutX="10" layoutY="170"/>
        <DatePicker fx:id="dateFechaFin" layoutX="150" layoutY="170"/>

        <Label text="Cantidad de Pasajeros:" layoutX="10" layoutY="210"/>
        <ComboBox fx:id="comboPasajeros" layoutX="150" layoutY="210" onAction="#cargarCamposPasajeros"/>

        <Label text="Seleccionar Pasajero:" layoutX="10" layoutY="250"/>
        <ComboBox fx:id="comboPasajeroSeleccionado" layoutX="150" layoutY="250" onAction="#cargarDatosPasajero"/>

        <Button text="Cargar Pasajero" layoutX="300" layoutY="250" onAction="#guardarPasajero"/>

        <Label text="Detalles de Pasajero:" layoutX="10" layoutY="290"/>

        <!-- Campos de texto para los detalles del pasajero -->
        <Label text="Nombre:" layoutX="10" layoutY="310"/>
        <TextField fx:id="txtNombre" layoutX="150" layoutY="310" prefWidth="200"/>

        <Label text="Apellido:" layoutX="10" layoutY="350"/>
        <TextField fx:id="txtApellido" layoutX="150" layoutY="350" prefWidth="200"/>

        <Label text="DNI:" layoutX="10" layoutY="390"/>
        <TextField fx:id="txtDNI" layoutX="150" layoutY="390" prefWidth="200"/>

        <!-- Añadir un VBox para los pasajeros -->
        <VBox fx:id="vboxPasajeros" layoutX="10" layoutY="430" spacing="10" prefWidth="400">
            <!-- Aquí se pueden añadir los TextFields para los pasajeros -->
        </VBox>

        <Button text="Crear Reserva" layoutX="10" layoutY="480" onAction="#onCrearReserva"/>
        <Button text="Cancelar" layoutX="150" layoutY="480" onAction="#onCancelarReserva"/>
    </children>
</AnchorPane>
