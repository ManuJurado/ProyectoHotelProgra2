<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.crear.CrearClienteController" spacing="10" prefHeight="500.0" prefWidth="600.0">
    <TextField fx:id="correoElectronicoField" promptText="Correo Electrónico"/>
    <TextField fx:id="nombreField" promptText="Nombre"/>
    <TextField fx:id="apellidoField" promptText="Apellido"/>
    <TextField fx:id="direccionField" promptText="Dirección"/>
    <TextField fx:id="telefonoField" promptText="Teléfono"/>
    <TextField fx:id="dniField" promptText="DNI"/>
    <PasswordField fx:id="contraseniaField" promptText="Contraseña"/>

    <!-- Selector de fecha para la fecha de nacimiento -->
    <DatePicker fx:id="fechaNacimientoPicker" promptText="Fecha de Nacimiento"/>

    <Button text="Guardar Cliente" onAction="#guardarCliente"/>
    <Button text="Cancelar" onAction="#cerrarVentana"/>
</VBox>
