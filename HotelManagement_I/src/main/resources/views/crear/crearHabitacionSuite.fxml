<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.crear.CrearHabitacionSuite" spacing="10" prefHeight="400.0" prefWidth="600.0">
    <!-- Campos generales -->
    <Text text="Selecciona las camas" />

    <!-- HBox 1 -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Cama 1:"/>
        <ComboBox fx:id="comboBoxCama1" />
    </HBox>

    <!-- HBox 2 -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Cama 2:"/>
        <ComboBox fx:id="comboBoxCama2" />
    </HBox>

    <!-- HBox 3 -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Cama 3:"/>
        <ComboBox fx:id="comboBoxCama3" />
    </HBox>

    <!-- HBox 4 -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Cama 4:"/>
        <ComboBox fx:id="comboBoxCama4" />
    </HBox>

    <!-- Comedor CheckBox -->
    <CheckBox text="Posee Comedor?" fx:id="comedorCheckBox" />

    <!-- Balcon CheckBox -->
    <CheckBox text="Posee Balcón?" fx:id="balconCheckBox" />

    <!-- Botón Guardar -->
    <Button text="Guardar Datos" onAction="#guardarHabitacionSuite"/>

    <!-- Botón Cerrar -->
    <Button text="Cerrar" onAction="#cerrarVentana"/>
</VBox>
